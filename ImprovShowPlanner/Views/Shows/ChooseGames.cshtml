@model ImprovShowPlanner.Models.Game

@{
    ViewBag.Title = "Choose Game";
}

<h2>Which Game?</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChoosePlayers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="Name" class ="form-control" asp-items="@ViewBag.GameList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Choose Players" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
